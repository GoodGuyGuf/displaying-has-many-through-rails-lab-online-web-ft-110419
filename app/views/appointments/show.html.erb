<h1>Appointment: </h1>

<ul>
    <li>
    <%= @appointment.appointment_datetime.strftime("%B %e, %Y") + " at " + @appointment.appointment_datetime.strftime("%H:%M") %>
    </li>

    <li>
    <%= link_to @appointment.doctor.name, doctor_path(@appointment.doctor) %>
    </li>

    <li>
    <%= link_to @appointment.patient.name, patient_path(@appointment.patient) %>
    </li>
</ul>
